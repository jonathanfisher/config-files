#
# This file is intended to be included by ~/.gitconfig.  This is done by adding
# the lines:
# [include]
#	path = /path/to/gitconfig
#
[color]
	ui = on
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[user]
	name = Jonathan Fisher

[core]
	editor = vim
    autocrlf = input

[branch]
    autosetupmerge = false
    autosetuprebase = always

[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	dc = diff --cached
	lg = log -p
	gr = log --all --graph --decorate --oneline
	lbb = "log --pretty=format:'# %ad %H %s' --date=short --first-parent --reverse"
    preq = pull-request
    rbc = rebase --continue
    mt = mergetool
    prb = pull --rebase
    rhh = reset --hard HEAD
    sui = submodule update --init --recursive
    ss = submodule sync
    rb = rebase
    lh = "log --pretty=format:'%H' -n 1"
    hash = "log --pretty=format:'%H'"

[merge]
    tool = vimdiff
    conflictstyle = diff3

[hub]
    protocol = git

[rerere]
    enabled = 1

[mergetool]
    prompt = false
    keepBackup = false

[pull]
    rebase = true

[push]
	default = current
