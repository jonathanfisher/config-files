#
# This file is intended to be included by ~/.gitconfig.  This is done by adding
# the lines:
# [include]
#	path = /path/to/gitconfig
#
[color]
	ui = true

[user]
	name = Jonathan Fisher

[core]
	editor = vim

[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	dc = diff --cached
	lg = log -p
	gr = log --all --graph --decorate --oneline
	lbb = "log --pretty=format:'# %ad %H %s' --date=short --first-parent --reverse"
    preq = pull-request
    rbc = rebase --continue
    mt = mergetool
    prb = pull --rebase
    rb = rebase

[merge]
    tool = vimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false

[pull]
    rebase = true

# Only push the branch we are tracking
[push]
	default = tracking
