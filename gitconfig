#
# This file is intended to be included by ~/.gitconfig.  This is done by adding
# the lines:
# [include]
#	path = /path/to/gitconfig
#
[color]
	ui = on
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[user]
	name = Jonathan Fisher

[core]
	editor = vim
    autocrlf = input

[branch]
    autosetupmerge = false
    autosetuprebase = always

[alias]
	gr = log --all --graph --decorate --oneline
    hash = log --pretty=format:'%H'
	lbb = log --pretty=format:'# %ad %H %s' --date=short --first-parent --reverse
	lg = log -p
    lh = log --pretty=format:'%H' -n 1
    mt = mergetool
    prb = pull --rebase
    preq = pull-request
    rbc = rebase --continue
    rhh = reset --hard HEAD
    ss = submodule sync
    sui = submodule update --init --recursive
    rb = rebase
    rs = rebase --exec 'git commit --amend --no-edit -n -S'

[merge]
    tool = vimdiff
    conflictstyle = diff3

[hub]
    protocol = git

[rerere]
    enabled = 1

[mergetool]
    prompt = false
    keepBackup = false

[pull]
    rebase = true

[push]
	default = current
